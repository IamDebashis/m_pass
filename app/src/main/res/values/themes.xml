<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MPass.DayNight" parent="Theme.MPass" />

    <style name="Theme.MPass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--    <style name="Theme.MPass" parent="Theme.Material3.DayNight.NoActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_400</item>
        <!-- Secondary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/black</item>

        <!--<item name="android:colorBackground">@color/blue_50</item>-->
        <item name="colorSurface">@color/white</item>
<!--        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>-->
        <item name="colorError">@color/red_400</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mpass_blue_50_alpha_060</item>
        <item name="android:windowLightStatusBar" tools:ingore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <!--        <item name="fontFamily">@font/poppins</item>-->
        <item name="android:textAllCaps">false</item>

        <item name="android:windowActivityTransitions">true</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.PocketPass.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.PocketPass.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.PocketPass.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.PocketPass.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.PocketPass.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.PocketPass.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.PocketPass.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.PocketPass.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.PocketPass.Subtitle2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.PocketPass.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.PocketPass.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.PocketPass.Button</item>

        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>


    <style name="tvHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvHeaderGay" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="tvSubHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvSubHeaderGray" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#292D32</item>
    </style>


    <style name="tvBold" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#292D32</item>
    </style>

    <style name="tvCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="tvCaptionBlack" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="tvBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvSubBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#292D32</item>
    </style>


    <style name="simpleET" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="simpleDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>





</resources>